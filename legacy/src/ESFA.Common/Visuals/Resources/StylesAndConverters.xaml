<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:y="clr-namespace:ESFA.Common.Composition">

    <y:InvertableBoolToVisibilityConverter x:Key="IsVisibleIfPathIsTrue" />
    <y:InvertableBoolToVisibilityConverter x:Key="IsVisibleIfPathIsFalse"
                                           IsInverted="True" />

    <y:TypeToInvertableBoolConverter x:Key="IsTrueIfPathIsTrue" />
    <y:TypeToInvertableBoolConverter x:Key="IsTrueIfPathIsFalse"
                                     IsInverted="True" />

    <y:MultiTextConverter x:Key="MultiText" />
    <y:FriendlyTextConverter x:Key="FriendlyText" />

    <y:InteractionStateToVisibilityConverter x:Key="IsVisibleIfStateMatches" />
    <y:InteractionStateToVisibilityConverter x:Key="IsVisibleIfStateDoesNotMatch"
                                             IsInverted="True" />

    <y:IsNullConverter x:Key="IsTrueIfPathIsNull" />
    <y:IsNullConverter x:Key="IsFalseIfPathIsNull"
                       IsInverted="True" />

    <!-- GDS compliant colors -->
    <Color x:Key="GDSGovBlueColor">#005EA5</Color>
    <Color x:Key="GDSGrey1Color">#6F777B</Color>
    <Color x:Key="GDSGrey2Color">#BFC1C3</Color>
    <Color x:Key="GDSGrey3Color">#DEE0E2</Color>
    <Color x:Key="GDSErrorColor">#B10E1E</Color>
    <Color x:Key="GDSFocusColor">#FFBF47</Color>

    <Color x:Key="GDSButtonForegroundColor">#F8F8F8</Color>
    <SolidColorBrush x:Key="GDSButtonForegroundBrush"
                     Color="{StaticResource GDSButtonForegroundColor}" />
    <SolidColorBrush x:Key="GDSButtonBorderHoverBrush"
                     Color="{StaticResource GDSFocusColor}" />
    <Color x:Key="GDSButtonBackgroundColor">#00823B</Color>
    <SolidColorBrush x:Key="GDSButtonBackgroundBrush"
                     Color="{StaticResource GDSButtonBackgroundColor}" />
    <Color x:Key="GDSButtonBorderColor">Black</Color>
    <SolidColorBrush x:Key="GDSButtonBorderBrush"
                     Color="{StaticResource GDSButtonBorderColor}" />
    <SolidColorBrush x:Key="GDSElementBorderBrush"
                     Color="{DynamicResource Gray5}" />
    <Color x:Key="GDSPassedColor">#00823B</Color>
    <SolidColorBrush x:Key="GDSPassedColorBrush"
                     Color="{StaticResource GDSPassedColor}" />
    <SolidColorBrush x:Key="GDSFailedColorBrush"
                     Color="{StaticResource GDSErrorColor}" />
    <SolidColorBrush x:Key="GDSContentBorderBrush"
                     Color="{StaticResource GDSGovBlueColor}" />
    <Color x:Key="GDSFooterDividerColor">#BFC1C3</Color>
    <SolidColorBrush x:Key="GDSFooterDividerBrush"
                     Color="{StaticResource GDSGovBlueColor}" />
    <SolidColorBrush x:Key="GDSFooterFontBrush"
                     Color="{StaticResource GDSGrey1Color}" />
    <SolidColorBrush x:Key="GDSFooterBackgroundBrush"
                     Color="{StaticResource GDSGrey3Color}" />

    <!-- 
    an assumption in this style is that the root element is 
    the page which carries the window title 
    -->
    <Style x:Key="GDSPageElementStyle"
           TargetType="ContentControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid>
                        <Grid Grid.IsSharedSizeScope="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"
                                                  SharedSizeGroup="BorderColumns" />
                                <ColumnDefinition />
                                <ColumnDefinition SharedSizeGroup="BorderColumns" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="1"
                                    Grid.Column="1"
                                    Style="{DynamicResource GDSContentBorderStyle}" />

                            <!-- placing the header over the blue divider -->
                            <Border Background="Black"
                                    Height="53"
                                    Padding="10"
                                    Grid.ColumnSpan="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition SharedSizeGroup="BorderColumns" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                        <ColumnDefinition SharedSizeGroup="BorderColumns" />
                                    </Grid.ColumnDefinitions>

                                    <Rectangle Grid.Column="1"
                                               Width="37"
                                               Height="35"
                                               Fill="{DynamicResource WhiteCrownIconBrush}" />
                                    <TextBlock Grid.Column="2"
                                               Text="GOV.UK"
                                               Style="{DynamicResource GlobalMarginStyle}"
                                               VerticalAlignment="Center"
                                               Foreground="White"
                                               FontSize="30"
                                               FontWeight="Bold" />
                                    <TextBlock Grid.Column="3"
                                               Text="{Binding ElementName=RootElement, Path=Title}"
                                               Style="{DynamicResource GlobalMarginStyle}"
                                               VerticalAlignment="Center"
                                               TextAlignment="Right"
                                               Foreground="White"
                                               FontSize="20" />
                                </Grid>
                            </Border>

                            <ScrollViewer Grid.Row="2"
                                          Grid.Column="1"
                                          HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Auto">
                                <ContentControl Template="{DynamicResource ApplicationPageContentArea}" />
                            </ScrollViewer>

                            <Grid Grid.Row="3"
                                  Grid.ColumnSpan="3"
                                  Margin="-1,5,-1,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition SharedSizeGroup="BorderColumns" />
                                    <ColumnDefinition />
                                    <ColumnDefinition SharedSizeGroup="BorderColumns" />
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="1"
                                        Padding="0,5,5,0">
                                    <ContentControl Template="{DynamicResource ApplicationPageButtonBarArea}" />
                                </Border>
                            </Grid>

                            <Border Grid.Row="5"
                                    Grid.ColumnSpan="3"
                                    Style="{DynamicResource GDSContentFooterStyle}">
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition SharedSizeGroup="BorderColumns" />
                                        <ColumnDefinition />
                                        <ColumnDefinition SharedSizeGroup="BorderColumns" />
                                    </Grid.ColumnDefinitions>

                                    <ContentControl Grid.Column="1"
                                                    Template="{DynamicResource ApplicationPageFooterArea}" />
                                </Grid>
                            </Border>

                            <!-- placing the blue divider over the footer -->
                            <Border Grid.Row="4"
                                    Grid.Column="1"
                                    Style="{DynamicResource GDSContentBorderStyle}" />
                        </Grid>

                        <ContentControl Template="{DynamicResource ApplicationPagePopupArea}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GDSContentBorderStyle"
           TargetType="Border">
        <Setter Property="Height"
                Value="9" />
        <Setter Property="Margin"
                Value="-1" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="Background"
                Value="{StaticResource GDSFooterDividerBrush}" />
        <Setter Property="BorderBrush"
                Value="{StaticResource GDSFooterDividerBrush}" />
    </Style>

    <Style x:Key="GDSContentFooterStyle"
           TargetType="Border">
        <Setter Property="Margin"
                Value="-1" />
        <Setter Property="BorderThickness"
                Value="0,3,0,0" />
        <Setter Property="Background"
                Value="{StaticResource GDSFooterBackgroundBrush}" />
        <Setter Property="BorderBrush"
                Value="{StaticResource GDSFooterDividerBrush}" />
    </Style>

    <Style x:Key="GDSButtonStyle"
           TargetType="Button">
        <Setter Property="HorizontalAlignment"
                Value="Right" />
        <Setter Property="VerticalAlignment"
                Value="Bottom" />
        <Setter Property="Margin"
                Value="5,0,0,0" />
        <Setter Property="Padding"
                Value="10,6" />
        <Setter Property="Background"
                Value="{StaticResource GDSButtonBackgroundBrush}" />
        <Setter Property="Foreground"
                Value="{StaticResource GDSButtonForegroundBrush}" />
        <Setter Property="FontWeight"
                Value="DemiBold" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="hoverBorder"
                            BorderBrush="Transparent"
                            BorderThickness="3,3,3,0">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{StaticResource GDSButtonBorderBrush}"
                                BorderThickness="0,0,0,2">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="hoverBorder"
                                    Property="BorderBrush"
                                    Value="{StaticResource GDSButtonBorderHoverBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Opacity"
                                    Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button"
           BasedOn="{StaticResource GDSButtonStyle}" />

    <Style x:Key="GlobalMarginStyle"
           TargetType="FrameworkElement">
        <Setter Property="Margin"
                Value="5,2" />
    </Style>

    <Style x:Key="PopupHeaderStyle"
           TargetType="TextBlock">
        <Setter Property="Margin"
                Value="8,5" />
        <Setter Property="FontSize"
                Value="18" />
        <Setter Property="FontWeight"
                Value="DemiBold" />
        <Setter Property="Foreground"
                Value="White" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
    </Style>

    <Style x:Key="ShortComboBoxStyle"
           TargetType="ComboBox">
        <Setter Property="Margin"
                Value="5,3,-3,5" />
        <Setter Property="Padding"
                Value="6" />
    </Style>

    <Style x:Key="ShortTextBoxStyle"
           TargetType="TextBox">
        <Setter Property="Margin"
                Value="5,3,-3,5" />
        <Setter Property="Padding"
                Value="5" />
        <Setter Property="MaxLength"
                Value="50" />
    </Style>

    <Style x:Key="CentreStageStyle"
           TargetType="FrameworkElement">
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
    </Style>

    <Style x:Key="WrapAndNoTrimTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource GlobalMarginStyle}">
        <Setter Property="TextWrapping"
                Value="Wrap" />
        <Setter Property="TextTrimming"
                Value="None" />
    </Style>

    <Style x:Key="TopWrapAndNoTrimTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource WrapAndNoTrimTextStyle}">
        <Setter Property="VerticalAlignment"
                Value="Top" />
    </Style>

    <Style x:Key="CentreLeftNoWrapAndNoTrimTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource GlobalMarginStyle}">
        <Setter Property="TextWrapping"
                Value="NoWrap" />
        <Setter Property="TextTrimming"
                Value="None" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
    </Style>

    <Style x:Key="NoWrapAndClipTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource GlobalMarginStyle}">
        <Setter Property="TextWrapping"
                Value="NoWrap" />
        <Setter Property="TextTrimming"
                Value="CharacterEllipsis" />
    </Style>

    <Style x:Key="FooterLinkTextStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource GlobalMarginStyle}">
        <Setter Property="HorizontalAlignment"
                Value="Right" />
    </Style>

    <Style x:Key="VerticalSplitter"
           TargetType="GridSplitter">
        <Setter Property="ResizeDirection"
                Value="Columns" />
        <Setter Property="ResizeBehavior"
                Value="PreviousAndNext" />
        <Setter Property="Width"
                Value="5" />
        <Setter Property="VerticalAlignment"
                Value="Stretch" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver"
                     Value="true">
                <Setter Property="Background"
                        Value="{DynamicResource AccentColorBrush3}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Hyperlink">
        <Setter Property="FontFamily"
                Value="Verdana" />
        <Setter Property="FontSize"
                Value="12" />
        <Setter Property="TextDecorations"
                Value="None" />
        <Setter Property="Foreground"
                Value="{StaticResource GDSFooterFontBrush}" />
    </Style>

