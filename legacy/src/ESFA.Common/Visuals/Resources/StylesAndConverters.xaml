    <Style x:Key="RoundButtonStyle"
           TargetType="{x:Type ButtonBase}">
        <Setter Property="OverridesDefaultStyle"
                Value="True" />
        <Setter Property="Background"
                Value="{DynamicResource ButtonNormalBackgroundBrush}" />
        <Setter Property="Foreground"
                Value="{DynamicResource NormalForegroundColorBrush}" />
        <Setter Property="HorizontalContentAlignment"
                Value="Center" />
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
        <Setter Property="Padding"
                Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ButtonBase}">
                    <Grid x:Name="grid"
                          Background="#02FFFFFF">
                        <Ellipse x:Name="ellipsebg"
                                 Stroke="{TemplateBinding Foreground}"
                                 StrokeThickness="0"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch" />
                        <Ellipse x:Name="ellipse"
                                 Stroke="{TemplateBinding Foreground}"
                                 StrokeThickness="2"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch" />
                        <ContentPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                          RecognizesAccessKey="True" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="ellipse"
                                    Property="Opacity"
                                    Value="1" />
                            <Setter TargetName="ellipsebg"
                                    Property="Fill"
                                    Value="{DynamicResource BlackBrush}" />
                            <Setter TargetName="ellipsebg"
                                    Property="Opacity"
                                    Value="0.1" />
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter TargetName="ellipsebg"
                                    Property="Fill"
                                    Value="{DynamicResource BlackBrush}" />
                            <Setter TargetName="ellipsebg"
                                    Property="Opacity"
                                    Value="0.3" />
                        </Trigger>
                        <Trigger Property="IsMouseOver"
                                 Value="False">
                            <Setter TargetName="ellipse"
                                    Property="Opacity"
                                    Value="0.5" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused"
                                 Value="true" />
                        <Trigger Property="ToggleButton.IsChecked"
                                 Value="true" />
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Setter Property="Foreground"
                                    Value="#ADADAD" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Storyboard x:Key="ItemGrowStoryBoard">
        <DoubleAnimation Duration="0:0:0.5"
                         Storyboard.TargetName="border"
                         Storyboard.TargetProperty="LayoutTransform.ScaleX"
                         To="2.0" />
        <DoubleAnimation Duration="0:0:0.5"
                         Storyboard.TargetName="border"
                         Storyboard.TargetProperty="LayoutTransform.ScaleY"
                         To="2.0" />
    </Storyboard>

    <Storyboard x:Key="ItemShrinkStoryboard">
        <DoubleAnimation Duration="0:0:0.5"
                         Storyboard.TargetName="border"
                         Storyboard.TargetProperty="LayoutTransform.ScaleX"
                         FillBehavior="Stop"
                         To="1.0" />
        <DoubleAnimation Duration="0:0:0.5"
                         Storyboard.TargetName="border"
                         Storyboard.TargetProperty="LayoutTransform.ScaleY"
                         FillBehavior="Stop"
                         To="1.0" />
    </Storyboard>

    <Style x:Key="ListBoxItemStyle"
           TargetType="{x:Type ListBoxItem}">
        <Setter Property="IsSelected"
                Value="{Binding Path=IsSelected}" />
        <Setter Property="IsEnabled"
                Value="{Binding Path=IsEnabled}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="border"
                            Background="Transparent"
                            RenderTransformOrigin="0,0">
                        <Border.LayoutTransform>
                            <ScaleTransform />
                        </Border.LayoutTransform>
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    TargetName="border"
                                    Value="{DynamicResource AccentColorBrush4}" />
                        </Trigger>
                        <Trigger Property="IsSelected"
                                 Value="True">
                            <Setter Property="Background"
                                    TargetName="border"
                                    Value="{DynamicResource AccentColorBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ListBoxItemGrowStyle"
           TargetType="{x:Type ListBoxItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border x:Name="border"
                            Background="Transparent"
                            RenderTransformOrigin="0,0">
                        <Border.LayoutTransform>
                            <ScaleTransform />
                        </Border.LayoutTransform>
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    TargetName="border"
                                    Value="{DynamicResource AccentColorBrush4}" />
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource ItemGrowStoryBoard}" />
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource ItemShrinkStoryboard}" />
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsSelected"
                                 Value="True">
                            <Setter Property="Background"
                                    TargetName="border"
                                    Value="{DynamicResource AccentColorBrush}" />
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource ItemGrowStoryBoard}" />
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource ItemShrinkStoryboard}" />
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GDSToggleSwitchStyle"
           TargetType="{x:Type ToggleButton}">
        <Setter Property="Foreground"
                Value="Black" />
        <Setter Property="Background"
                Value="#FAFAFB" />
        <Setter Property="BorderBrush"
                Value="#EAEAEB" />
        <Setter Property="Width"
                Value="60" />
        <Setter Property="Height"
                Value="30" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Viewbox Stretch="Uniform">
                        <Canvas Name="Layer_1"
                                Width="26"
                                Height="26"
                                Canvas.Left="12"
                                Canvas.Top="0">
                            <Ellipse x:Name="BorderLeft"
                                     Canvas.Left="0"
                                     Width="26"
                                     Height="26"
                                     Fill="Transparent"
                                     Stroke="Transparent"
                                     StrokeThickness="3" />
                            <Ellipse x:Name="BorderRight"
                                     Canvas.Left="15"
                                     Width="26"
                                     Height="26"
                                     Fill="Transparent"
                                     Stroke="Transparent"
                                     StrokeThickness="3" />
                            <Border x:Name="BorderMiddle"
                                    Canvas.Left="10"
                                    Width="15"
                                    Height="26"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,3,0,3" />

                            <Ellipse Canvas.Left="3"
                                     Canvas.Top="3"
                                     Width="20"
                                     Height="20"
                                     Fill="{TemplateBinding Background}"
                                     Stroke="{TemplateBinding BorderBrush}"
                                     StrokeThickness="0.5" />
                            <Ellipse Canvas.Left="18"
                                     Canvas.Top="3"
                                     Width="20"
                                     Height="20"
                                     Fill="{TemplateBinding Background}"
                                     Stroke="{TemplateBinding BorderBrush}"
                                     StrokeThickness="0.5" />
                            <Border Canvas.Left="13"
                                    Canvas.Top="3"
                                    Width="15"
                                    Height="20"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="0,0.5,0,0.5" />

                            <Ellipse x:Name="ellipse"
                                     Canvas.Left="3"
                                     Canvas.Top="3"
                                     Width="20"
                                     Height="20"
                                     Fill="White"
                                     Stroke="{TemplateBinding BorderBrush}"
                                     StrokeThickness="0.3">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform X="0"
                                                        Y="0" />
                                </Ellipse.RenderTransform>
                                <Ellipse.BitmapEffect>
                                    <DropShadowBitmapEffect Softness="0.1"
                                                            ShadowDepth="0.7"
                                                            Direction="270"
                                                            Color="#BBBBBB" />
                                </Ellipse.BitmapEffect>
                            </Ellipse>
                        </Canvas>
                    </Viewbox>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked"
                                 Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                        To="{StaticResource GDSButtonBackgroundColor}"
                                                        Duration="0:0:0.2" />
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                        To="{StaticResource GDSButtonBorderColor}"
                                                        Duration="0:0:0.2" />
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Ellipse.RenderTransform).(TranslateTransform.X)"
                                                                       Storyboard.TargetName="ellipse">
                                            <SplineDoubleKeyFrame KeyTime="0"
                                                                  Value="0" />
                                            <SplineDoubleKeyFrame KeyTime="0:0:0.4"
                                                                  Value="15"
                                                                  KeySpline="0, 1, 0.6, 1" />
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="Background.Color"
                                                        To="#FAFAFB"
                                                        Duration="0:0:0.2" />
                                        <ColorAnimation Storyboard.TargetProperty="BorderBrush.Color"
                                                        To="#EAEAEB"
                                                        Duration="0:0:0.2" />
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Ellipse.RenderTransform).(TranslateTransform.X)"
                                                                       Storyboard.TargetName="ellipse">
                                            <SplineDoubleKeyFrame KeyTime="0"
                                                                  Value="15" />
                                            <SplineDoubleKeyFrame KeyTime="0:0:0.3"
                                                                  Value="0"
                                                                  KeySpline="0, 0.5, 0.5, 1" />
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="BorderLeft"
                                    Property="Stroke"
                                    Value="{StaticResource GDSButtonBorderHoverBrush}" />
                            <Setter TargetName="BorderRight"
                                    Property="Stroke"
                                    Value="{StaticResource GDSButtonBorderHoverBrush}" />
                            <Setter TargetName="BorderMiddle"
                                    Property="BorderBrush"
                                    Value="{StaticResource GDSButtonBorderHoverBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Setter TargetName="BorderLeft"
                                    Property="Stroke"
                                    Value="{DynamicResource GrayBrush5}" />
                            <Setter TargetName="BorderRight"
                                    Property="Stroke"
                                    Value="{DynamicResource GrayBrush5}" />
                            <Setter TargetName="BorderMiddle"
                                    Property="BorderBrush"
                                    Value="{DynamicResource GrayBrush5}" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked"
                                           Value="true" />
                                <Condition Property="IsEnabled"
                                           Value="false" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Background"
                                        Value="{DynamicResource GrayBrush4}" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked"
                                           Value="true" />
                                <Condition Property="IsEnabled"
                                           Value="true" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Background"
                                        Value="{DynamicResource GDSButtonBackgroundBrush}" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PopupListBoxStyle"
           TargetType="ListBox"
           BasedOn="{StaticResource GlobalMarginStyle}">
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="ItemContainerStyle"
                Value="{DynamicResource ListBoxItemStyle}" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility"
                Value="Disabled" />
    </Style>

    <Style x:Key="EmbeddedPopupElementStyle"
           TargetType="ContentControl">
        <Setter Property="HorizontalContentAlignment"
                Value="Center" />
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid Visibility="{TemplateBinding Property=y:BoundProperty.Primary}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.3*" />
                            <RowDefinition Height="9*" />
                            <RowDefinition Height="0.3*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="9*" />
                            <ColumnDefinition Width="0.5*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.RowSpan="3"
                                Grid.ColumnSpan="3"
                                Background="WhiteSmoke"
                                Opacity="0.7" />
                        <Border Grid.Row="1"
                                Grid.Column="1"
                                BorderBrush="{DynamicResource AccentColorBrush}"
                                Background="{DynamicResource ControlBackgroundBrush}"
                                BorderThickness="2"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <Border x:Name="TitleBlock"
                                        Background="Black"
                                        Margin="0,0,0,5"
                                        Height="40">
                                    <TextBlock Text="{TemplateBinding Property=y:BoundProperty.Secondary}"
                                               Style="{DynamicResource PopupHeaderStyle}" />
                                </Border>
                                <Grid Grid.Row="1"
                                      Margin="15">
                                    <ContentPresenter />
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="y:BoundProperty.Secondary"
                                 Value="{x:Null}">
                            <Setter TargetName="TitleBlock"
                                    Property="Visibility"
                                    Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GDSHeadingStyle"
           TargetType="TextBlock"
           BasedOn="{StaticResource GlobalMarginStyle}">
        <Setter Property="FontSize"
                Value="14" />
        <Setter Property="FontWeight"
                Value="DemiBold" />
    </Style>

    <Style x:Key="GDSAssociatedElementStyle"
           TargetType="ContentControl">
        <Setter Property="BorderBrush"
                Value="{DynamicResource GDSElementBorderBrush}" />
        <Setter Property="Background"
                Value="{DynamicResource ControlBackgroundBrush}" />
        <Setter Property="BorderThickness"
                Value="3,0,0,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Style="{StaticResource GlobalMarginStyle}"
                            Padding="4,2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Style="{StaticResource GDSHeadingStyle}"
                                       Text="{TemplateBinding Property=y:BoundProperty.Primary}" />
                            <ContentPresenter Grid.Row="1" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
